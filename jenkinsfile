pipeline {
    agent any
      
    parameters {
        choice choices: ['debian_amd64', 'ubuntu_amd64', 'centos_amd64'], description: 'Choose your favorite distribution', name: 'dist'
    }

    stages {
        stage('init') {
            steps {
                withAWS(credentials: 'Aws-creds', region: 'ap-south-1'){
                    sh 'terraform init'
                }
            }
        }
        stage('plan') {
             steps {
                withAWS(credentials: 'Aws-creds', region: 'ap-south-1'){
                    sh 'terraform plan'
                }
            }
        }
        stage('apply') {
            steps {
                withAWS(credentials: 'Aws-creds', region: 'ap-south-1'){
                    sh 'terraform apply -auto-approve'
                }
            }
        }
        stage('parameter') {
            steps {
                sh 'echo $dist'
            }
        }
    }
}


