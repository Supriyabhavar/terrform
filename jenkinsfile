pipeline {
    agent any

    stages {
        stage('init') {
            steps {
                withAWS(credentials: 'Aws-creds', region: 'ap-south-1'){
                    sh 'terraform init'
                }
            }
        }
        stage('plan') {
             steps {
                withAWS(credentials: 'Aws-creds', region: 'ap-south-1'){
                    sh 'terraform plan'
                }
            }
        }
        stage('apply') {
            steps {
                withAWS(credentials: 'Aws-creds', region: 'ap-south-1'){
                    sh 'terraform apply'
                }
            }
        }
    }
}
